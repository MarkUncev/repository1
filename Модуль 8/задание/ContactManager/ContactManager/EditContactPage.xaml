<Page x:Class="ContactManager.EditContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактировать контакт" Background="#2D2D30">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Выберите контакт для редактирования" FontSize="20" FontWeight="Bold"
                   Foreground="#007ACC" Margin="0,0,0,15"/>

        <!-- Список контактов -->
        <ListBox x:Name="ContactsListBox" Grid.Row="1" SelectionChanged="ContactsListBox_SelectionChanged"
                 Background="#404040" BorderBrush="#505050" BorderThickness="1" Margin="0,0,0,15">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="3" Background="Transparent">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="#007ACC" FontSize="14"/>
                            <TextBlock Text="{Binding Phone}" Foreground="White"/>
                            <TextBlock Text="{Binding Email}" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Форма редактирования -->
        <Grid Grid.Row="2" IsEnabled="False" x:Name="EditForm">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Имя:" Width="100" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="NameTextBox" Width="300" Height="35" BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Телефон:" Width="100" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="PhoneTextBox" Width="300" Height="35" BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Email:" Width="100" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="EmailTextBox" Width="300" Height="35" BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить изменения" Click="SaveChanges_Click" Width="180" Height="45"
                        Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"
                        BorderThickness="0" Margin="0,0,10,0"/>
                <Button Content="Удалить контакт" Click="DeleteContact_Click" Width="180" Height="45"
                        Background="#B22222" Foreground="White" FontSize="16" FontWeight="Bold"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>