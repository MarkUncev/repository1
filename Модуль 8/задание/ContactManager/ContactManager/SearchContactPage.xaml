<Page x:Class="ContactManager.SearchContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поиск контактов" Background="#2D2D30">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White" FontWeight="Bold"/>
            <TextBox x:Name="SearchTextBox" Width="350" Height="35" TextChanged="SearchTextBox_TextChanged"
                     BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
        </StackPanel>

        <ListBox x:Name="ContactsListBox" Grid.Row="1" Background="#404040" BorderBrush="#505050" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="3" Background="Transparent">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="#007ACC"/>
                            <TextBlock Text="{Binding Phone}" Foreground="White"/>
                            <TextBlock Text="{Binding Email}" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>