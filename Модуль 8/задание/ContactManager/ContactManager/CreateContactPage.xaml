<Page x:Class="ContactManager.CreateContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создать контакт" Background="#2D2D30">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Создание нового контакта" FontSize="20" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Имя:" Width="100" VerticalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="NameTextBox" Width="300" Height="35" BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Телефон:" Width="100" VerticalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="PhoneTextBox" Width="300" Height="35" BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Email:" Width="100" VerticalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="EmailTextBox" Width="300" Height="35" BorderBrush="#505050" BorderThickness="1" Background="#404040" Foreground="White" Padding="5"/>
        </StackPanel>

        <Button Grid.Row="4" Content="Сохранить контакт" Click="SaveContact_Click" Width="200" Height="45"
                Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"
                BorderThickness="0" HorizontalAlignment="Center"/>
    </Grid>
</Page>